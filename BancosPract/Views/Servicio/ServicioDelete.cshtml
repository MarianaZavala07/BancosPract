@model ServiciosModel
@{
    ViewData["Title"] = "Borrar Servicio";
}

<h3 class="mb-3"></h3>




<form asp-controller="Servicio" asp-action="ServicioDelete">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Informacion de Servicio Bancario</h5>
            <h6 class="card-subtitle mb-2 text-body-secundary">
                ¡VA A BORRAR! ¿Esta seguro?
            </h6>
            <p class="card-text">Servicio de @Model.NombreS </p>
        </div>
    </div>

    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">BORRAR</button>
    <a class="btn btn-secundary" asp-controller="Servicio" asp-action="ServicioList">CANCELAR</a>
    </form>